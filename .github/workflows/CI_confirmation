name: Confirmation

on:
  push:
  pull_request:

jobs:
  say-hello:
    runs-on: ubuntu-latest
    steps:
      - name: Print greeting
        run: echo "✅ Push realizado con éxito"

      - name: Print current date
        run: date

      - name: Print repo info
        run: |
          echo "Repositorio: ${{ github.repository }}"
          echo "Branch: ${{ github.ref_name }}"
          echo "Autor del commit: ${{ github.actor }}"
